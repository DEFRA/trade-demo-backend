# direnv configuration for CDP Java Backend Template
# Automatically sets JAVA_HOME to the correct JDK version from asdf

use asdf

# Set JAVA_HOME to the Corretto 21 JDK managed by asdf
export JAVA_HOME="${HOME}/.asdf/installs/java/corretto-21.0.8.9.1"

# Add JAVA_HOME/bin to PATH
PATH_add "${JAVA_HOME}/bin"

# Testcontainers configuration for Rancher Desktop
# Docker socket is configured in ~/.testcontainers.properties (user-specific)
export TESTCONTAINERS_RYUK_DISABLED=true
